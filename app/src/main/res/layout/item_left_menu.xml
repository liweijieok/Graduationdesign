<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_left_menu_item_root"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="50dp">
    <LinearLayout
        android:paddingLeft="20dp"
        android:id="@+id/leftmenu_rllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_menu_icon"
            android:layout_width="@dimen/iv_main_width"
            android:layout_height="@dimen/img_main_height"
            android:gravity="center"
            tools:src="@drawable/main_gallery" />

        <TextView
            android:id="@+id/tv_left_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_margin_left"
            tools:text="Gallery"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:background="@color/gray"
        android:id="@+id/view_division_left_menu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


</LinearLayout>
