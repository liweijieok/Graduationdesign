<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/build_dialog_bg"
    android:layout_height="match_parent">
    <EditText
        android:textColor="@color/black"
        android:text="1234567"
        android:hint="长度不少于6"
        android:id="@+id/serret_dialog_pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:textColor="@color/black"
        android:hint="长度不少于6"
        android:id="@+id/serret_dialog_pw1"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/serret_dialog_btn_cancel"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/editteext_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black" />
        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/serret_dialog_btn_sure"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/editteext_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
